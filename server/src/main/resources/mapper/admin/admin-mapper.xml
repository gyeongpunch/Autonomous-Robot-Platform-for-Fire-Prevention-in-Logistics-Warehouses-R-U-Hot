<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.kro.areuhot.adminauth.mapper.AdminUserMapper">

    <select id="findByUsername" resultType="kr.kro.areuhot.adminauth.model.AdminUser">
        SELECT
            id,
            username,
            password,
            name,
            is_active AS active
        FROM user
        WHERE username = #{username}
    </select>

</mapper>
